  app.use(app.router);
});

function requireAuthentication(req, res, next) {
  if (!res.locals.user) {
    res.redirect("/login");
    /*
    res.statusCode = 403;
    res.end('<h1>Forbidden</h1>');
    */
  } else {
    next();
  }
}

